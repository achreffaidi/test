#include<stdio.h>
//-----------------------------
int som(int i,int j) {
	int k,m=0 ; 
	for (k=i ; k<=j;k++){
		m=k*k + m ; 
	}
	return m ; 
}
void show(int n , int i , int j ) {

int k ; 
printf("%d = ",n) ;  
for(k=i ; k <j ; k++ )printf("%d^2 + ",k);printf("%d^2 \n",j) ;
}

int main(){
	int n,i,j,m=0 ; 
printf("saisir un nombre : ") ; 
scanf("%d",&n) ;

for(i=1;0==0;i++){
	for(j=i;j>0;j--){
		if((som(j,i)<=n) &&(som(j,i)>m ) ) {
			m=som(j,i) ; 
		show(m,j,i) ; }
	}
	if(som(j,i)>n) break ; 
} ; 
} 
